<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/dtlogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Create Tutorial Posting"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="377dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/location_text"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:text="No location selected"
            android:textColor="#000000"
            android:translationX="190dp"
            android:translationY="-5dp" />

        <Button
            android:id="@+id/location_button"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:text="Select Location"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/date_time_button"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:text="Select Date/Time"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/date_time_text"
            android:layout_width="171dp"
            android:layout_height="39dp"
            android:text="No date/time selected"
            android:textColor="#000000"
            android:translationX="190dp"
            android:translationY="20dp" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/duration_text_box"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Session Duration (minutes)"
        android:padding="12dp"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/topic_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_spinner" />

    <EditText
        android:id="@+id/fee_text_box"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Registration Fee ($)"
        android:padding="12dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/desc_text_box"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Description"
        android:padding="12dp"
        android:textAlignment="viewStart"
        android:textSize="16sp" />

    <Button
        android:id="@+id/post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"
        android:text="Post tutorial"
        android:textColor="@color/white" />

</LinearLayout>